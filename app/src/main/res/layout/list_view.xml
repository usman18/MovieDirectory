<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#000000"
                android:id="@+id/movie_image_view"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOVIE_NAME"
                android:layout_toRightOf="@id/movie_image_view"
                android:id="@+id/movie_title_view"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Released : "
                android:padding="5dp"
                android:id="@+id/release_id_view"
                android:layout_toRightOf="@id/movie_image_view"
                android:layout_below="@id/movie_title_view"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:padding="5dp"
                android:layout_below="@id/release_id_view"
                android:id="@+id/category_view"
                android:layout_toRightOf="@id/movie_image_view"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>