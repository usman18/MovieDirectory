<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Movie Title"
        android:fontFamily="@font/acme"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/title_alert"
        android:textSize="16sp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_alert"
        android:id="@+id/title_movie_alert"
        android:hint="eg : Superman"
        android:textSize="14sp"
        android:layout_marginEnd="12dp"
        android:padding="12dp"
        android:background="@drawable/round_corners"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_movie_alert"
        android:text="Search"
        android:id="@+id/search_alert"
        android:background="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        />


</RelativeLayout>
